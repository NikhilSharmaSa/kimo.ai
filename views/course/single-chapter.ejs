<% layout("/layouts/boilerplate") %>

<body>
   <div class="container">
    <div class="card">
        <h5 class="card-header">Chapter No. <%= sno %></h5>
        <div class="card-body">
          <h5 class="card-title"><%=chapter.name %></h5>
          <p class="card-text"><%=chapter.text %></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div><div class="row">
    <div class="col-6">
   <h4 class="py-5">Leave A Review</h4>
   <form action="/courses<%=id  %>/chapter<%= chapter.id  %>/reviews<%= sno  %>" class="row g-3 needs-validation" novalidate method="post">
<label for="rating">Rating</label>
<input type="range" name="review[rating]" id="rating" min="1" max="5">
<label for="validationCustom05">Comment</label>
<textarea name="review[comment]" class="form-control"  id="validationCustom05" required></textarea>
<div class="invalid-feedback">
Please provide a Comment
</div>
<button class="btn btn-outline-dark">Submit</button>
   </form>
</div>
   <div class="col-5 mx-2">
   <hr>
   <h4>All Reviews</h4>
  <div class="row">
    
   <% totalReviews.forEach(element => {
    
%>
 <div class="card col-sm-5 mx-2 mb-3">
<div class="card-body">
<h5 class="card-title">Rating: <%= element.rating    %> Star </h5>
<h6 class="card-subtitle mb-2 text-muted">Review</h6>
<p class="card-text"> <%= element.comment    %></p>
<form action="/courses<%= id %>/chapters<%= chapter.id %>/<%= sno %>/review<%= element.id  %>?_method=DELETE" method="post">
<button class="btn btn-sm btn-dark">Delete</button></form>
</div>
</div>
   <%    });  %>



 </div>
</div>
</div>
</div>

</body>